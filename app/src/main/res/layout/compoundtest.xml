<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/alzarin"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:theme="@style/toolbar"
        >
        <TextView
            android:id="@+id/no_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY BAG (3)"
            android:background="@color/alzarin"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

<com.example.tech6.shop.customview.CompoundCart
    android:id="@+id/view1"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    custom:textColor="#8e44ad"
    custom:descriptionColor="#e74c3c"
    custom:priceColor="#8e44ad"
    custom:OtherDetailsColor="#333333"
    custom:backgroundImage="@drawable/product12"
    />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|end"
        android:paddingBottom="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:theme="@style/button"
                android:background="@color/alzarin"
                android:textColor="@color/white"
                android:text="CHECK OUT"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:theme="@style/button"
                android:background="@color/alzarin"
                android:textColor="@color/white"
                android:text="CONTINUE SHOPPING"
                android:id="@+id/continueshopping"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>

        </LinearLayout>
    </LinearLayout>
    <!-- end linear tag -->

</LinearLayout>
